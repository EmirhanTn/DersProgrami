@using DersProgrami.Models
@using static DersProgrami.Models.ScheduleViewModel
@model AddScheduleDto
@{
    var faculties = (IEnumerable<Faculty>)ViewBag.Faculties;
    var departments = (IEnumerable<Department>)ViewBag.Departments; 
    var lessons = (IEnumerable<Lesson>)ViewBag.Lessons;             
}
<form id="addScheduleForm" method="post" asp-action="AddSchedule">
    @Html.AntiForgeryToken()
    <input type="hidden" name="Day" value="@Model.Day" />
    <input type="hidden" name="Hour" value="@Model.Hour" />

    <div class="mb-3">
        <label class="form-label">Fakülte</label>
        <select id="FacultyId" name="FacultyId" class="form-select">
            <option value="">Seçiniz</option>
            @foreach (var f in (IEnumerable<Faculty>)ViewBag.Faculties)
            {
                <option value="@f.FacultyId">@f.Name</option>
            }
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Bölüm</label>
        <select id="DepartmentId" name="DepartmentId" class="form-select">
            <option value="">Seçiniz</option>
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Ders</label>
        <select id="LessonId" name="LessonId" class="form-select">
            <option value="">Seçiniz</option>
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Sınıf (Classroom)</label>
        <input name="Classroom" class="form-control" />
    </div>

    <div class="text-end">
        <button type="submit" class="btn btn-success">Kaydet</button>
    </div>
</form>