@using DersProgrami.Models
@model List<Teacher>

@{
    ViewData["Title"] = "Öğretmen Başvuruları";
}

<h2 class="mb-3">@ViewData["Title"]</h2>

@if (TempData["ok"] is string msg)
{
    <div class="alert alert-success">@msg</div>
}

@if (!Model.Any())
{
    <div class="alert alert-info">Bekleyen başvuru yok.</div>
}
else
{
    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th>Ad Soyad</th>
                <th>Email</th>
                <th>Fakülte / Bölüm</th>
                <th style="width:180px;"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var t in Model)
            {
                <tr>
                    <td>@t.FullName (@t.Title)</td>
                    <td>@t.Email</td>
                    <td>@t.Department?.Faculty?.Name / @t.Department?.Name</td>
                    <td class="text-end">
                        <form asp-action="ApproveTeacher" asp-controller="Admin" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@t.TeacherId" />
                            <button type="submit" class="btn btn-success btn-sm">Onayla</button>
                        </form>
                        <form asp-action="RejectTeacher" asp-controller="Admin" method="post" class="d-inline"
                              onsubmit="return confirm('Bu başvuruyu reddetmek istediğinize emin misiniz?')">
                            <input type="hidden" name="id" value="@t.TeacherId" />
                            <button type="submit" class="btn btn-outline-danger btn-sm">Reddet</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
