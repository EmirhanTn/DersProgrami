@model DersProgrami.Models.OgretmenYukuVM
@{
    ViewData["Title"] = "Ders Yükü";
    string DayLabel(DayOfWeek d) => d switch
    {
        DayOfWeek.Monday => "Pazartesi",
        DayOfWeek.Tuesday => "Salı",
        DayOfWeek.Wednesday => "Çarşamba",
        DayOfWeek.Thursday => "Perşembe",
        DayOfWeek.Friday => "Cuma",
        _ => d.ToString()
    };
    var days = new[] { DayOfWeek.Monday, DayOfWeek.Tuesday, DayOfWeek.Wednesday, DayOfWeek.Thursday, DayOfWeek.Friday };
}

<h2>@ViewData["Title"]</h2>
<p class="text-muted">@Model.TeacherName</p>

<div class="row g-4">
    <div class="col-lg-6">
        <div class="card">
            <div class="card-header fw-semibold">Gün Bazında Saat</div>
            <div class="card-body p-0">
                <table class="table table-sm mb-0">
                    <thead><tr><th>Gün</th><th class="text-end">Saat</th></tr></thead>
                    <tbody>
                        @foreach (var d in days)
                        {
                            <tr>
                                <td>@DayLabel(d)</td>
                                <td class="text-end">@Model.HoursByDay.GetValueOrDefault(d)</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr class="table-light">
                            <th>Toplam</th>
                            <th class="text-end">@Model.Total</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>

    <div class="col-lg-6">
        <div class="card">
            <div class="card-header fw-semibold">Ders Bazında Kırılım</div>
            <div class="card-body p-0">
                <table class="table table-sm mb-0">
                    <thead><tr><th>Ders</th><th class="text-end">Saat</th></tr></thead>
                    <tbody>
                        @if (Model.ByLesson.Count == 0)
                        {
                            <tr><td colspan="2" class="text-muted">Kayıt bulunamadı.</td></tr>
                        }
                        else
                        {
                            @foreach (var row in Model.ByLesson)
                            {
                                <tr>
                                    <td><strong>@row.Code</strong> - @row.Name</td>
                                    <td class="text-end">@row.Hours</td>
                                </tr>
                            }
                        }
                    </tbody>
                    <tfoot>
                        <tr class="table-light">
                            <th>Toplam</th>
                            <th class="text-end">@Model.Total</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>
