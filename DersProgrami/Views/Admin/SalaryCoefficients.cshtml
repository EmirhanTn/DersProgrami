@model IEnumerable<DersProgrami.Models.SalaryCoefficient>
@{
    ViewData["Title"] = "Maaş Ayarları";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="UpdateBaseHourly" method="post" class="mb-3 d-flex gap-2 align-items-center">
    @Html.AntiForgeryToken()
    <label class="form-label mb-0">Temel Saat Ücreti (₺)</label>
    <input type="number" step="0.01" name="baseHourly" value="@ViewBag.BaseHourly" class="form-control w-auto" />
    <button class="btn btn-primary btn-sm">Kaydet</button>
</form>

<table class="table table-bordered align-middle w-auto">
    <thead><tr><th>Unvan</th><th>Katsayı</th><th style="width:140px;"></th></tr></thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.Title</td>
                <td>
                    <form asp-action="UpdateCoefficient" method="post" class="d-flex gap-2">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@c.Id" />
                        <input type="number" step="0.01" name="coefficient" value="@c.Coefficient" class="form-control" />
                        <button class="btn btn-success btn-sm">Güncelle</button>
                    </form>
                </td>
                <td></td>
            </tr>
        }
    </tbody>
</table>
