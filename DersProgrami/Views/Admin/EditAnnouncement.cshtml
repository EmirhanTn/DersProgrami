@model DersProgrami.Models.Announcement
@{
    var isEdit = Model.AnnouncementId != 0;
    ViewData["Title"] = isEdit ? "Duyuru Düzenle" : "Duyuru Oluştur";
}
<h3>@ViewData["Title"]</h3>
<form asp-action="@(isEdit ? "EditAnnouncement" : "CreateAnnouncement")" method="post" class="mt-3">
    @Html.AntiForgeryToken()
    @if (isEdit)
    {
        <input type="hidden" asp-for="AnnouncementId" />
    }

    <div class="mb-3">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Content" class="form-label">İçerik</label>
        <textarea asp-for="Content" class="form-control" rows="6"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>

    <div class="row g-3 mb-3">
        <div class="col-md-4">
            <label asp-for="PublishAt" class="form-label">Yayın Başlangıç</label>
            <input asp-for="PublishAt" type="datetime-local" class="form-control" />
        </div>
        <div class="col-md-4">
            <label asp-for="ExpireAt" class="form-label">Bitiş</label>
            <input asp-for="ExpireAt" type="datetime-local" class="form-control" />
        </div>
        <div class="col-md-4 d-flex align-items-end">
            <div class="form-check">
                <input asp-for="IsActive" class="form-check-input" />
                <label asp-for="IsActive" class="form-check-label">Aktif</label>
            </div>
        </div>
    </div>

    <button class="btn btn-primary">Kaydet</button>
    <a asp-action="Announcements" class="btn btn-outline-secondary">Geri</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
