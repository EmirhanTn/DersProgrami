@model EditScheduleAdminDto
@{
    var faculties = (IEnumerable<Faculty>)ViewBag.Faculties;
    var departments = (IEnumerable<Department>)ViewBag.Departments;
    var lessons = (IEnumerable<Lesson>)ViewBag.Lessons;
}
<form id="editScheduleFormAdmin" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" name="ScheduleId" value="@Model.ScheduleId" />
    <input type="hidden" name="TeacherId" value="@Model.TeacherId" />
    <input type="hidden" name="Day" value="@Model.Day" />
    <input type="hidden" name="Hour" value="@Model.Hour" />

    <div class="mb-2">
        <label class="form-label">Fakülte</label>
        <select id="FacultyId" name="FacultyId" class="form-select" required>
            @foreach (var faculty in faculties)
            {
                <option value="@faculty.FacultyId" selected="@(faculty.FacultyId == Model.FacultyId)">@faculty.Name</option>
            }
        </select>
    </div>
    <div class="mb-2">
        <label class="form-label">Bölüm</label>
        <select id="DepartmentId" name="DepartmentId" class="form-select" required>
            @foreach (var department in departments)
            {
                <option value="@department.DepartmentId" selected="@(department.DepartmentId == Model.DepartmentId)">@department.Name</option>
            }
        </select>
    </div>
    <div class="mb-2">
        <label class="form-label">Ders</label>
        <select id="LessonId" name="LessonId" class="form-select" required>
            @foreach (var l in lessons)
            {
                <option value="@l.LessonId" selected="@(l.LessonId == Model.LessonId)">@l.Code - @l.LessonName</option>
            }
        </select>
    </div>
    <div class="mb-2">
        <label class="form-label">Derslik</label>
        <input class="form-control" name="Classroom" value="@Model.Classroom" />
    </div>
    <div class="text-end">
        <button class="btn btn-success" type="submit">Kaydet</button>
    </div>
</form>
